{
  "name": "fastify-ts-api",
  "version": "1.0.0",
  "description": "Complete Fastify application with TypeScript, Prisma, and ESLint",
  "main": "index.js",
  "engines": {
    "node": ">=24.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luabraggion/fastify-ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node index.js",
    "prepare": "husky",
    "lint": "eslint --ignore-pattern './src/generated/**/*' ./src --ext .ts",
    "lint:fix": "eslint --ignore-pattern './src/generated/**/*' ./src --ext .ts --fix",
    "style:check": "prettier --check './src/**/*.ts'",
    "style:fix": "prettier --write './src/**/*.ts'"
  },
  "keywords": [
    "node",
    "fastify",
    "typescript",
    "prisma",
    "bcrypt",
    "eslint",
    "prettier"
  ],
  "author": "Lu√£ Braggion",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.28.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.30",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "prisma": "^6.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "@prisma/client": "6.9.0",
    "bcrypt": "^6.0.0",
    "fastify": "^5.3.3"
  },
  "packageManager": "yarn@4.9.2",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
